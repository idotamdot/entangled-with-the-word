# Authentication Configuration Template
# Copy this file to auth_config.yaml and update with your own credentials
#
# To generate password hashes, use:
# python -c "import bcrypt; print(bcrypt.hashpw('YOUR_PASSWORD'.encode(), bcrypt.gensalt()).decode())"

credentials:
  usernames:
    admin:
      email: admin@yourdomain.com
      name: Administrator
      # Default password is 'admin123' - CHANGE THIS IN PRODUCTION!
      password: $2b$12$REPLACE_WITH_YOUR_HASHED_PASSWORD
      role: admin
    user:
      email: user@yourdomain.com
      name: Regular User
      password: $2b$12$REPLACE_WITH_YOUR_HASHED_PASSWORD
      role: user

cookie:
  expiry_days: 30
  # Change this key to a random secure string in production!
  key: your_random_secret_key_here
  name: entangled_auth_cookie
